{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "react",
      "lib": ["dom", "dom.iterable", "esnext"],
      "declaration": true,
      "declarationDir": "dist",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["components/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  